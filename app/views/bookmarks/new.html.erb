<div class="container">
  <div class="row">
    <div class="col-12">
      <div class="form">
        <h2>Add a new movie</h2>
          <%= simple_form_for [ @list, @bookmark ] do |f| %>
          <%= f.association :movie, input_html: { class: 'select2' } %>
          <%= f.input :comment, placeholder: 'Add your comment' %>
          <%= f.submit "Add movie", class: "btn btn-primary" %>
          <% end %>
      </div>
    </div>
  </div>
</div>
